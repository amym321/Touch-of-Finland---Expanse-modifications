<div class="collapsibles-wrapper">
  <button type="button" class="label collapsible-trigger collapsible-trigger-btn collapsible-trigger-btn--borders collapsible--auto-height{% if title == 'Description' %} is-open{% endif %}" aria-controls="Product-content-{{ id }}">
    {{ title }}
    {%- render 'collapsible-icons' -%}
  </button>
  <div id="Product-content-{{ id }}" class="collapsible-content collapsible-content--all{% if title == 'Description' %} is-open{% endif %}">
    <div class="collapsible-content__inner rte">
      {{ content }}
    </div>
  </div>
</div>
