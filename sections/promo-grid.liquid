          {
            "type": "range",
            "id": "height",
            "label": "Height",
            "default": 500,
            "min": 100,
            "max": 800,
            "step": 20,
            "unit": "px"
          },
          {
            "type": "header",
            "content": "Alignment"
          },
          {
            "type": "select",
            "id": "text_align",
